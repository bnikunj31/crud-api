<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>All Users</title>
    <style>
        .active{
            background-color: aqua;
            border-radius: 50px;
        }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand border border-secondary p-2" href="/">CRUD</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/">Show Users</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/addUsers">Add User</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <table class="container table table-striped table-hover p-5 mt-5">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Phone Number</th>
              <th scope="col">Role</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
              <% users.forEach(function(user) { %>
                <tr>
                  <td><%= user.name %></td>
                  <td><a class="text-decoration-none text-dark" href="mailto:<%= user.email %>"><%= user.email %></a></td>
                  <td><a class="text-decoration-none text-dark" href="tel:<%= user.phone %>"><%= user.phone %></a></td>
                  <td><%= user.role %></td>
                  <td>
                    <a href="/editUsers/<%= user._id %>" class="btn btn-outline-warning" >Edit</a>
                    <a href="/deleteUsers/<%= user._id %>" class="btn btn-outline-danger">Delete</a>
                  </td>
                </tr>
              <% }) %>
          </tbody>
    </table>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"
  ></script>
</html>